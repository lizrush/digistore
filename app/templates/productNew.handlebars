<h1>
  {{ input value=name }}
  <small class='muted'>(price: {{ input type="number" value=price }})</small>
</h1>

<div class='row'>
  <div class='col-lg-8'>
        Image url: {{ textarea value=image rows=1 cols=50}}
    <br>
      Avatar url: {{ textarea value=avatar rows=1 cols=50 }}
    <img {{ bind-attr src=image }} class='thumbnail col-lg-10' />
  </div>
  <div class='col-lg-4'>
    <table>
    <tbody>
    <tr>
      <td colspan="2">
        {{ textarea value=description rows=10 cols=50 }}
      </td>
    </tr>
    <tr><td colspan="2"><hr></td></tr>
    <tr>
      <td>

      </td>
      <td>
        <button {{ action "createProduct" this }} class="btn btn-primary">Save!</button>
      </td>
    </tr>
    </tbody>
    </table>
  </div>
</div>
