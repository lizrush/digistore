<h1>Manage Products</h1>
<h3>{{# link-to "productNew"}}Create a New Product</h3>{{/link-to}}

<div class='row'>
  <div class='col-lg-2'>
    <h4>All Cats:</h4>
    <ul class='list-unstyled'>
      {{# each }}
        <li>
          {{# link-to "product" this }}
           {{ name }}<br>
            <img {{ bind-attr src=avatar }} />
          {{/ link-to }}
          <br><br>
           {{# link-to "productEdit" this }}<button class="btn btn-primary btn-xs">Edit</button>{{/ link-to }}
          <button {{ action "productDelete" this }} class="btn btn-danger btn-xs">Delete</button>
        </li><hr>
      {{/ each }}
    </ul>
  </div>
  <div class='col-lg-10'>
    {{ outlet }}
  </div>
</div>
