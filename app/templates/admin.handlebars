<h1>Manage Products</h1>
<h3>{{# link-to "productNew"}}Create a New Product</h3>{{/link-to}}
<button class="btn btn-primary" {{ action 'manageOrders' this }}> Manage Orders </button>

<div class='row'>

{{# if manageOrders }}
<h1>Manage Orders</h1>
  <div class='col-lg-2'>
  <h4>All Orders:</h4>
    <ul class='list-unstyled'>
      {{#each orders}}
        <li>
        {{# link-to "order" this }}
           {{ customer_name }}
           {{/link-to}}

        </li><hr>
      {{/ each }}
    </ul>
  </div>
 {{ else }}

  <div class='col-lg-2'>
    <h4>All Cats:</h4>
    <ul class='list-unstyled'>
      {{#each products}}
        <li>
          {{# link-to "product" this }}
           {{ name }}<br>
            <img {{ bind-attr src=avatar }} />
          {{/ link-to }}
          <br><br>
           {{# link-to "productEdit" this }}<button class="btn btn-primary btn-xs">Edit</button>{{/ link-to }}
          <button {{ action "productDelete" this }} class="btn btn-danger btn-xs">Delete</button>
        </li><hr>
      {{/ each }}
    </ul>
  </div>
{{/if}}
  <div class='col-lg-8'>
    {{ outlet }}
  </div>
</div>
